extends ../layout

block content
  
  if obj
    thead
      div.restaurantHeader
        h1= 'New Restaurant'
    tbody
      form(name="createRestaurant", action="/restaurants", method="post")
           label(for = 'restaurantName') Name
           br
           input(type="text", name="restaurantName")
           br
           label(for = 'city') Location
           br
           input(type="text", name="city") 
           br
           select(name="state")
